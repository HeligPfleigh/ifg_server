{
  "name": "ifg-server",
  "version": "1.0.0",
  "description": "Server for ifg app",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t ifg-server .",
    "docker:run": "docker run -p 3000:3000 -d ifg-server",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "nodemon -r source-map-support/register .",
    "start:watch": "tsc-watch -b --onSuccess 'npm start'",
    "prepublishOnly": "npm run test",
    "dev:docker": "docker-compose up -d --build"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^2.1.11",
    "@loopback/boot": "^1.5.3",
    "@loopback/context": "^1.21.4",
    "@loopback/core": "^1.9.3",
    "@loopback/openapi-v3": "^1.9.4",
    "@loopback/repository": "^1.12.0",
    "@loopback/rest": "^1.17.0",
    "@loopback/rest-explorer": "^1.3.4",
    "@loopback/service-proxy": "^1.3.3",
    "bcryptjs": "^2.4.3",
    "ejs": "^2.7.1",
    "email-templates": "^6.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.5.0",
    "isemail": "^3.2.0",
    "js-md5": "^0.7.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "loopback-connector-mongodb": "^4.2.0",
    "multer": "^1.4.2",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.3.0",
    "p-event": "^4.1.0"
  },
  "devDependencies": {
    "@loopback/build": "^2.0.8",
    "@loopback/eslint-config": "^3.0.0",
    "@loopback/testlab": "^1.7.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/email-templates": "^6.0.0",
    "@types/express": "^4.17.1",
    "@types/js-md5": "^0.4.2",
    "@types/lodash": "^4.14.138",
    "@types/multer": "^1.3.9",
    "@types/node": "^10.14.17",
    "@types/node-schedule": "^1.2.4",
    "@types/nodemailer": "^6.2.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^6.1.0",
    "nodemon": "^1.19.2",
    "source-map-support": "^0.5.13",
    "tsc-watch": "^3.0.0",
    "typescript": "~3.5.3"
  }
}
